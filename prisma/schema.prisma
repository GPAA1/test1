// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  // id                   Int     @default(autoincrement()) @id
  id                   String  @id
  username             String?
  tariffPlan           String  @default("base")
  tariffPlan_temp      String?
  channel_temp      String?
  subscriptionEndDate  String  @default("never")
  createdOpt           Int     @default(0)
  byOpt                Int     @default(0)
  totalSavings         Int     @default(0)
  invitedUsers         Int     @default(0)
  totalEarned          Int     @default(0)
  promocode            String?
  opt_chanel_create    String?
  opt_into             OptInto[]
  discount             Int     @default(0)
  //фильтр для категорий
  filter               String? @default("none")
  //фильтр для оптов
  filter_opt            String? @default("none")
  message_mode         String  @default("standart")
  opts                 Opt[]
  channels             UserChanel[]
}

model OptInto {
  id             Int    @default(autoincrement()) @id
  chanel         String     
  booking_date   String?
  status         String  @default("created")
  user           User[]
}

model Opt {
  chanel         String     @id
  title          String?
  category       String?
  retail_price   String?
  wholesale_cost String?
  min_places     String?
  max_places     String?
  booking_date   String?
  deadline_date  String?
  placement_time String?
  requisites     String?
  status         String  @default("created")
  user           User?   @relation(fields: [idUser], references: [id])
  idUser         String?
}

model UserChanel {
  id       Int     @default(autoincrement()) @id
  idChanel String
  category String?
  username String?
  title String?
  // link: chanel.link,
  daily_reach Int?
  ci_index Int?
  participants_count Int?
  avg_post_reach Int?
  forwards_count Int?
  user           User?   @relation(fields: [idUser], references: [id])
  idUser         String?
}

model Catalog {
  id          Int     @default(autoincrement()) @id

  category String?
  username String?
  title String?

  link String?

  //сумарный дневной охват
  daily_reach Int?
  //индекс цитирования
  ci_index Int?
  //количество подписчиков
  participants_count Int?
  //Средний охват публикаций
  avg_post_reach Int?
  //количнсвто репостов в другие каналы
  forwards_count Int?
}

model Recommendation {
  id             Int     @default(autoincrement()) @id
  username       String?
  price_standart String?
  price_now      String?
  format         String?
  number_posts   Int?
  data_list      String?
  requisites     String?
  deadline       String?
  info           String?
}

